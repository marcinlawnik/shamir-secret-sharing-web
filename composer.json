{
    "name": "shamir-secret-sharing-web",
    "description": "A website to share and recover secrets using Shamir's Secret Sharing Scheme (ssss)",
    "keywords": ["shamir", "sharing", "secret", "scheme", "web", "website"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Marcin Lawniczak",
            "email": "marcin@lawniczak.me",
            "homepage": "http://lawniczak.me",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "marcin@lawniczak.me"
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:teqneers/shamir.git"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "tq/shamir": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}
